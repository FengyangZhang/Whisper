<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bupt.johnfrey.whisper"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoHeader">
        <activity android:name=".activities.LoadingActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.WhisperActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ArchiveActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ReadArchiveActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>