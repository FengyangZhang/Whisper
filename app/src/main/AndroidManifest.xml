<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bupt.johnfrey.whisper"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoHeader">
        <activity android:name=".activities.LoadingActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.WhisperActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ArchiveActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.ReadArchiveActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.HistoryActivity"
                  android:theme="@style/NoHeaderWithAnim"
                  android:screenOrientation="portrait"/>
        <activity android:name=".activities.EchoActivity"
                  android:theme="@style/DialogStyle"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>