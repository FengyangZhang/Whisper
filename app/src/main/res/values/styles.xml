<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoHeaderWithAnim">
        <item name="android:windowNoTitle">true</item>
        <item name="android:showDividers">none</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/SmoothWindowAnimTheme</item>
    </style>
    <style name="NoHeader">
        <item name="android:windowNoTitle">true</item>
        <item name="android:showDividers">none</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SmoothWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
    </style>

    <style name="marquee_textview">
        <item name="android:ellipsize">end</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
