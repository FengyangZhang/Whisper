<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:background="@color/black_333">

    <ImageButton
        android:id="@+id/ib_header_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/d15"
        android:paddingRight="@dimen/d15"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_back" />

    <TextView
        android:id="@+id/tv_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black_333"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/whisper_edit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <ImageButton
        android:id="@+id/ib_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d10"
        android:visibility="gone" />

</RelativeLayout>

